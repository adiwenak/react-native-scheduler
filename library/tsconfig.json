{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "../build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "react",
      "react-native"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}